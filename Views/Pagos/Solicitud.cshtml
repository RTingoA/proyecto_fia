@model MensajePago

@{
    ViewData["Title"] = "Solicitud";
}



<div class="container bg-light">
		<div class="row">
			<div class="col py-5 text-center">
				<h2>Formulario de Pago</h2>
				<p class="lead">Si deseas conocer más sobre nuestro servicio de lavado de carrocería, escríbenos 
					al formulario de contacto. En Salón Car Wash estaremos encantados de responder todas tus consultas.</p>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-md-8 order-2 order-md-1">
				<h4 class="mb-3">Direccion de Envio</h4>

		@Html.ValidationSummary()		
				<form action="Solicitud" method="post">
					<div class="row">
						<div class="col-12 col-sm-6 mb-3">
							<label for="nombre">Nombre</label>
							<input type="text" class="form-control" id="nombre" name="Nombre">
						</div>
						<div class="col-12 col-sm-6 mb-3">
							<label for="apellido">Apellido</label>
							<input type="text" class="form-control" id="apellido" name="Apellido">
						</div>
					</div>


					<div class="mb-3">
						<label for="correo">Correo <span class="text-muted">Obligatorio</span></label>
						<input type="email" class="form-control" placeholder="nombre@correo.com" name="Correo">
					</div>

					<div class="mb-3">
						<label for="direccion">Direccion</label>
						<input type="text" class="form-control" placeholder="Calle Principal" name="Direccion">
					</div>

					<div class="mb-3">
						<label for="direcciontwo">Direccion 2</label>
						<input type="text" class="form-control" placeholder="Interior [MZ - LOTE]" name="DireccionTwo">
					</div>

					<div class="row">
						<div class="col-12 col-sm-4 mb-3">
							<label for="distrito">Distrito</label>
							<select name="Distrito" id="distrito" class="custom-select d-block w-100">
								<option value="">Seleccionar Distrito</option>
								<option value="Lima">Lima</option>
								<option value="La Victoria">La Victoria</option>
								<option value="San Luis">San Luis</option>
								<option value="Santa Anita">Santa Anita</option>
							</select>
						</div>
						<div class="col-12 col-sm-4 mb-3">
							<label for="tiposervicio">Tipo de Servicio</label>
							<select name="TipoServicio" id="tiposervicio" class="custom-select d-block w-150">
								<option value="">Seleccionar</option>
								<option value="LavadoPremium">Lavado Premium</option>
								<option value="LavadoGold">Lavado Gold</option>
								<option value="LavadoVip">Lavado Vip</option>
							</select>

						</div>

						<div class="col-12 col-sm-4 mb-3">
							<label for="codigoPostal">Codigo Postal</label>
							<input type="text" id="codigoPostal" class="form-control" name="CodigoPostal">
						</div>
					</div>

					<hr>

					<div class="custom-control custom-checkbox">
						<input type="checkbox" class="custom-control-input" id="misma-direccion">
						<label for="misma-direccion" class="custom-control-label">Enviar a la misma direccion de facturacion</label>
					</div>

					<div class="custom-control custom-checkbox">
						<input type="checkbox" class="custom-control-input" id="guardar-informacion">
						<label for="guardar-informacion" class="custom-control-label">Recibir promociones a mi Correo</label>
					</div>

					<hr class="mb-4">
					<div class="d-block mb-3">
						
						<div class="col-12 col-sm-4 mb-3">
							<label for="tipoTarjeta">Tarjeta de Pago</label>
							<select name="TipoTarjeta" id="tipoTarjeta" class="custom-select d-block w-100">
								<option value="">Seleccionar Tarjeta</option>
								<option value="Visa">Visa</option>
								<option value="Mastercard">Mastercard</option>
								<option value="Paypal">Paypal</option>
							</select>
						</div>
						


					</div>

					<div class="row">
						<div class="col-12 col-sm-6 mb-3">
							<label for="nombreTitular">Nombre del Titular de la tarjeta</label>
							<input type="text" id="nombreTitular" class="form-control" name="NombreTitular">
							<small class="text-muted">Nombre completo como se muestra en la tarjeta</small>
						</div>
						<div class="col-12 col-sm-6 mb-3">
							<label for="numeroTarjeta">Numero de tarjeta</label>
							<input type="text" id="numeroTarjeta" class="form-control" name="NumeroTarjeta">
						</div>
					</div>

					<div class="row">
						<div class="col-6 col-sm-4 mb-3">
							<label for="codigoExpiracion">Expiracion</label>
							<input type="text" id="codigoExpiracion" class="form-control" name="CodigoExpiracion">
						</div>
						<div class="col-6 col-sm-4 mb-3">
							<label for="codigoCvv">CVV</label>
							<input type="text" id="CodigoCvv" class="form-control" name="CodigoCvv">
						</div>
					</div>

					<hr class="mb-4">
					<input type="submit" value="Continuar al pago" class="btn btn-block btn-lg btn-primary">
				</form>
			</div>
			<div class="col-12 col-md-4 order-1 order-md-2">
				<h4 class="mb-3 d-flex justify-content-between align-items-center">
					<span class="text-muted">Tu Carrito</span>
					<span class="badge badge-secondary badge-pill">100% Seguro</span>
				</h4>
				

			</div>
		</div>

		
</div>

